<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_patient_form" model="ir.ui.view">
            <field name="name">patient.form</field>
            <field name="model">patient.model</field>
            <field name="arch" type="xml">
                <form string="Patient">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="ref_code" />
                            <field name="qr_code_image" />
                            <!-- Add more fields here as per your patient model -->
                        </group>
                    </sheet>
                    <div class="qr-code">
                        <h2>QR Code</h2>
                        <div t-esc="qr_code_image" />
                    </div>
                </form>
            </field>
        </record>
    </data>

    <record id="action_qr_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_qr"
        name="QR Patients"
        parent="menu_qr_operations"
        action="action_qr_patient"
        sequence="10" />

</odoo>